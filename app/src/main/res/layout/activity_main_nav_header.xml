<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="@drawable/ic_bg">

    <TextView
        android:id="@+id/tv_nav_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/tv_nav_header_email"
        app:layout_constraintStart_toStartOf="@id/tv_nav_header_email"
        tools:text="Сидоров Иван"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_nav_header_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/color_gray_nav_header"
        android:textSize="14sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="sidorov.ivan@mail.ru"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_nav_logout"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/labelLogout"
        android:src="@drawable/ic_log_out"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/tv_nav_header_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_nav_header_name"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SBDelivery" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#24222C</item>
        <item name="colorPrimaryVariant">#24222C</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>
        <item name="colorError">@color/red</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">#1A1A21</item>
        <item name="drawerArrowStyle">@style/StyleDrawerArrow</item>
        <item name="colorNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemSelected">@color/color_orange</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>
    </style>

    <style name="Theme.SBDelivery.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="StyleDrawerArrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">#FF6F14</item>
    </style>

    <style name="StyleNavHeader">
        <item name="android:textSize">@dimen/abc_text_size_body_1_material</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="StyleEditText">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingEnd">7dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:background">@drawable/et_background</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StyleEditTextForCode">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingEnd">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:background">@drawable/et_background</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:digits">0123456789</item>
    </style>

    <style name="StyleButton">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:backgroundTint">@color/color_orange</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>


    </style>
    <!-- <style name="Toolbar" parent="Theme.SBDelivery">
         <item name="android:background">?attr/colorPrimary</item>
         <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
     </style>-->

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">@color/color_orange</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>

    <style name="StyleDialogTheme" parent="@android:style/Theme.Dialog">
        <!--        <item name="android:windowIsTranslucent">true</item>-->
        <!--        <item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:paddingTop">5dp</item>
        <!--        <item name="android:windowContentOverlay">@null</item>-->
        <item name="android:windowNoTitle">true</item>
        <!--        <item name="android:backgroundDimEnabled">false</item>-->
        <!--        <item name="android:windowIsFloating">false</item>-->
        <item name="android:background">@drawable/dg_background</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CartButtonAdd" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorSecondary">@color/color_orange</item>
        <item name="colorOnSecondary">@android:color/white</item>
    </style>

    <style name="StyleOptionsMenu" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:itemBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/black</item>
    </style>
</resources>